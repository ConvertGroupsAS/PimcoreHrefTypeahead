<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
    <plugin>

        <!-- the plugin name [A-Za-z_] -->
        <pluginName>PimcoreHrefTypeahead</pluginName>
        <!--<pluginIcon>/plugins/IboodUI/static/img/icon.png</pluginIcon>-->

        <!-- a short description -->
        <pluginDescription><![CDATA[]]></pluginDescription>

        <!-- meta data -->
        <pluginVersion>0.0.1</pluginVersion>
        <pluginRevision>1</pluginRevision>
        <pluginBuildTimestamp>0</pluginBuildTimestamp>

        <!-- className of the plugin which extends Pimcore_API_Plugin_Abstract-->
        <pluginClassName>\HrefTypeahead\Plugin</pluginClassName>

        <!-- include paths relative to plugin-directory -->
        <pluginIncludePaths>
            <path>/PimcoreHrefTypeahead/models</path>
            <path>/PimcoreHrefTypeahead/lib</path>
        </pluginIncludePaths>

        <!-- namespaces to register with autoloader-->
        <pluginNamespaces>
            <namespace>HrefTypeahead</namespace>
        </pluginNamespaces>

        <!-- js files with path relative to plugin-directory -->
        <pluginJsPaths>
            <path>/plugins/PimcoreHrefTypeahead/static/js/models/HrefObject.js</path>
            <path>/plugins/PimcoreHrefTypeahead/static/js/pimcore/object/tags/hrefTypeahead.js</path>
            <path>/plugins/PimcoreHrefTypeahead/static/js/pimcore/object/classes/data/hrefTypeahead.js</path>
        </pluginJsPaths>

        <!-- css files with path relative to plugin-directory -->
        <pluginCssPaths>
            <path>/plugins/PimcoreHrefTypeahead/static/css/style.css</path>
        </pluginCssPaths>
    </plugin>
</zend-config>
